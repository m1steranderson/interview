{
  "name": "@task-manager/web",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "concurrently \"tailwindcss -i styles/input.css -o src/generated.css --watch\" \"wrangler dev --port 3000\"",
    "build:css": "tailwindcss -i styles/input.css -o src/generated.css --minify",
    "build": "bun run build:css && wrangler deploy --dry-run --outdir dist",
    "deploy": "bun run build:css && wrangler deploy",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "hono": "^4.7.0",
    "@task-manager/shared": "workspace:*"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20250109.0",
    "wrangler": "^3.100.0",
    "tailwindcss": "^3.4.0",
    "concurrently": "^9.1.0",
    "typescript": "^5.7.0"
  }
}
